<%= erb :_form %>
<script>
  pbt.addEventListener('save', function(cb){
    $.ajax({
      type: 'PUT',
      url: '/triggers/<%= @trigger.hash %>',
      data: $("#tweetform").serialize(),
      success: function(data){
        var url = window.location.href.split('?')[0].replace('/edit', '/send');
        console.log(window.location.href);
        console.log(url);
        pbt.saved(url);
      }
    });
  });

  pbt.addEventListener('delete', function(cb){
    $.ajax({
      type: 'DELETE',
      url: '/triggers/<%= @trigger.hash %>',
      success: function(data){
        pbt.deleted();
      }
    });
  });

  pbt.ready();
</script>
