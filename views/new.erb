<%= erb :_form %>
<script>
  pbt.addEventListener('save', function(cb){
    $.ajax({
      type: 'POST',
      url: '/triggers',
      data: $("#tweetform").serialize(),
      success: function(data){
        var url = window.location.href.split('?')[0].replace('/new', '/') + data.trigger_hash + '/send';
        pbt.saved(url);
      }
    });
  });

  pbt.ready();
</script>
